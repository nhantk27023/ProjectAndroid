<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@drawable/header_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/phudu_black"
            android:gravity="center"
            android:text="Novel Passion"
            android:textColor="#ffffff"
            android:textSize="35dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
             android:id="@+id/imageView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="30dp"
             android:src="@drawable/avt" />

         <TextView
             android:layout_width="325dp"
             android:layout_height="wrap_content"
             android:fontFamily="@font/utm_swiss"
             android:layout_marginTop="10dp"
             android:gravity="center"
             android:text="@string/login_text"
             android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user"
            android:layout_width="319dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/input_text"
            android:drawableLeft="@drawable/userr"
            android:drawablePadding="18dp"
            android:ems="10"
            android:hint="Tên người dùng"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="13dp">

        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="319dp"
            android:layout_height="47dp"
            android:ems="10"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingEnd="20dp"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="18dp"
            android:layout_marginTop="14dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/input_text"
            android:drawableRight="@drawable/eyes"
            android:hint="Mật khẩu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textSize="12dp"
            android:layout_marginTop="18dp"
            android:textColor="#1E92EA"
            android:layout_gravity="end">

        </TextView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ProgressBar>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/btn_login"
            android:background="@drawable/button_login_black"
            app:backgroundTint="@null"
            android:paddingBottom="10dp"
            android:text="Đăng nhập"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/line"
            android:drawableRight="@drawable/line"
            android:drawablePadding="10dp"
            android:text="hoặc"
            android:textSize="13dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black"
            android:layout_gravity="center">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="37.53dp"
                android:layout_height="37.53dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/fb">
            </ImageButton>

            <ImageButton
                android:layout_width="37.53dp"
                android:layout_height="37.53dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/gg">
            </ImageButton>

            <ImageButton
                android:layout_width="37.53dp"
                android:layout_height="37.53dp"
                android:background="@drawable/apple">
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yourTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản? "
                android:textSize="14dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_underline"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:textSize="14dp"
                android:id="@+id/registerNow"
                android:onClick="openRegistrationPage"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>




